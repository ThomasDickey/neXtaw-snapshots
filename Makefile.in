SHELL = /bin/sh
VPATH		= @srcdir@

DESTDIR=@DESTDIR@
RPATH_LIST=@RPATH_LIST@
TOP_MFLAGS = @cf_cv_makeflags@ DESTDIR="$(DESTDIR)" RPATH_LIST="$(RPATH_LIST)"

@SET_MAKE@

all \
clean \
distclean \
lint \
tags \
uninstall \
install ::
	cd doc &&	${MAKE} ${TOP_MFLAGS} $@
	cd X11 &&	${MAKE} ${TOP_MFLAGS} $@
	cd programs &&	${MAKE} ${TOP_MFLAGS} $@

distclean ::
	$(RM) Makefile config.h config.status config.log
